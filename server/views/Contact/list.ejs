<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>

    <!-- contacts.ejs/Juan Arevalo/301323792/02-23-2023 -->
    <!-- Main nav navigation -->
    <main class="container">
        <div class="row">
            <div class="offset-md-1 col md-10">
                <h1><%=title%></h1>
                <a href="/contactList/add" class="btn btn-primary" role="Button">
                    <i class="fas fa-plus-circl"></i>Add a Contact</a>
                    
                <br>
                <table class="table table-bordered table-stripped table-hover">
                    <!-- Header Row -->
                    <tr class="d-flex">
                        <th class="text-content col-2">Name</th>
                        <th class="text-content col-2">Number</th>
                        <th class="text-content col-1">Email</th>
                        <th class="text-center col-1"></th> <!--Added-->
                        <th class="text-center col-1"></th> <!--Added-->
                    </tr>
                    <!-- END Header Row -->
                    <% for(let count =0; count<ContactList.length; count ++){%>
                        <tr class="d-flex">
                            <td class="text-center col-2"><%=ContactList[count].Name%></td>
                            <td class="text-center col-2"><%=ContactList[count].Number%></td>
                            <td class="text-center col-1"><%=ContactList[count].Email%></td>
                            <td class="text-center col-1"><a href="/contactList/edit/<%=ContactList[count]._id%>" class = "btn btn-primary"><i class = "fas fa-pencil alt"></i>Edit </a></td> <!--Added-->
                            <td class="text-center col-1"><a href="/contactList/delete/<%=ContactList[count]._id%>" class = "btn btn-danger"><i class = "fas fa-trash alt"></i>Delete </a></td> <!--Added-->
                        </tr>
                        <%}%>
                    
                </table>

            </div>

        </div>
    </main>

<%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%>