<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
<!-- content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h3><%=title%></h3>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contact name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the contact number"
                    name="number" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Contact Email Address</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the email address of the contact"
                    name="email" required>
                </div>

                <div class="form-group">
                    <label for="usernameTextField">Contact Username</label>
                    <input type="text" class="form-control"
                    id="usernameTextField"
                    placeholder="Enter the username of the contact"
                    name="username" required>
                </div>

                <div class="form-group">
                    <label for="passwordTextField">Contact Password</label>
                    <input type="test" class="form-control"
                    id="passwordTextField"
                    placeholder="Enter the password of the contact"
                    name="password" required>
                </div>
                <br>
                <button class="btn btn-outline-primary" type = "submit"><i class="fas fa-edit"></i> Submit</button>
                <a href="/contactList" class="btn btn-outline-warning"><i class="fa-solid fa-ban"></i> cancel</a>
                
            </form>

        </div>
    </div>
</div>


<%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%>